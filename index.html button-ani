<style>
  .container {
    margin: 100px;
    display: flex;
  }

  .container .enter:nth-of-type(2) {
    margin-left: 0px;
    visibility: hidden;
    opacity: 0;
  }

  .enter {
    width: 100px;
    height: 100px;
    position: relative;
    cursor: pointer;
    transition: 0.5s ease;
    background: yellow;
    z-index: 999;
  }

  .enter span {
    position: absolute;
    transition-delay: 1s;
  }
</style>
<div class="container">
  <div class="enter">
    <span>Animate</span>
  </div>
</div>

<a-scene
  embedded
  arjs="trackingMethod: best; sourceType: webcam; debugUIEnabled: false;"
>
  <a-assets>
    <a-asset-item
      id="whaleitem"
      src="https://s3.amazonaws.com/davatron5000/blue_whale/scene.gltf"
    ></a-asset-item>
  </a-assets>

  <a-entity
    id="whale"
    gltf-model="#whaleitem"
    position="0 1.5 -10"
    rotation="0 90 0"
    scale="5 5 5"
    animation="property: position; from: 0 1.5 -10; to: 0 2.5 -10; startEvents: position; dur: 500;"
  >
  </a-entity>

  <a-entity
    id="box"
    geometry="primitive: box"
    material="color: blue"
    position="0 1.8 -3"
    rotation="0 30 0"
    animation="property: position; from: 0 1.8 -3; to: 0 2.8 -3; startEvents: position; dur: 500"
  >
  </a-entity>
</a-scene>
<script>
  document.querySelector(".enter").addEventListener("click", function() {
    document.querySelector("#whale").emit("position");
    document.querySelector("#box").emit("position");
  });
</script>
